<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".thirdactivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="402dp"
        android:layout_height="730dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.47"
        tools:layout_editor_absoluteX="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Equipments present in the instution:"
                android:textColor="#070707"
                android:textSize="25sp" />

            <HorizontalScrollView
                android:layout_width="459dp"
                android:layout_height="212dp"
                android:background="#54C8C2C2">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:background="#AEABAB"
                        app:srcCompat="@drawable/carrom"
                        tools:src="@drawable/carrom" />

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:background="#FDF8F8" />

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:background="#AEABAB"
                        app:srcCompat="@drawable/basketball"
                        tools:src="@drawable/basketball" />

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:background="#FDF8F8" />

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:background="#AEABAB"
                        app:srcCompat="@drawable/badminton"
                        tools:src="@drawable/badminton" />

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:background="#FDF8F8" />

                    <ImageView
                        android:id="@+id/imageView9"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:background="#AEABAB"
                        app:srcCompat="@drawable/rugby"
                        tools:src="@drawable/rugby" />

                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="486dp"
                android:text="\n*Carrom:
            \nCarrom is a pleasant and exciting indoor game. It fosters a competitive environment in a fun and exciting manner.
            \n*Basketball:
            \nBasketball, game played between two teams of five players each on a rectangular court, usually indoors.
            \n*Badminton:
            \nBadminton is a racquet sport played using racquets to hit a shuttlecock across a net.
            \n*Rugby:
            \nRugby union, commonly known simply as rugby, is a close-contact team sport that originated in England in the first half of the 19th century. One of the two codes of rugby football, it is based on running with the ball in hand. "
                android:textSize="20sp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
