<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/qnalayoutID"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuestionActivity">

    <EditText
        android:id="@+id/option1ID3"
        android:layout_width="278dp"
        android:layout_height="51dp"
        android:ems="10"
        android:hint="enter option 3"
        android:inputType="textPersonName"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/checkBox"
        app:layout_constraintEnd_toStartOf="@+id/radioGroup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/option1ID2" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chip4"
        android:layout_width="231dp"
        android:layout_height="98dp"
        android:text="Dark "
        android:textSize="34sp"
        app:checkedIcon="@drawable/moonicon"
        app:chipIcon="@drawable/moonicon"
        tools:layout_editor_absoluteX="893dp"
        tools:layout_editor_absoluteY="841dp" />

    <FrameLayout
        android:id="@+id/frameLayout2"
        android:layout_width="410dp"
        android:layout_height="244dp"
        android:layout_marginBottom="11dp"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="413dp"
            android:layout_height="235dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/question" />

        <ToggleButton
            android:id="@+id/toggleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ToggleButton"
            android:textOff="Dark" />

    </FrameLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="375dp"
        android:layout_height="41dp"
        android:layout_marginTop="8dp"
        android:text="Type your question here"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textQuestionID"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout2" />

    <EditText
        android:id="@+id/textQuestionID"
        android:layout_width="393dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="sample question?"
        android:inputType="textPersonName"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/option1ID"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/option1ID"
        android:layout_width="280dp"
        android:layout_height="47dp"
        android:layout_marginTop="1dp"
        android:ems="10"
        android:hint="enter option 1"
        android:inputType="textPersonName"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/radioGroup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textQuestionID" />

    <EditText
        android:id="@+id/option1ID2"
        android:layout_width="280dp"
        android:layout_height="53dp"
        android:layout_marginTop="1dp"
        android:ems="10"
        android:hint="enter option 2"
        android:inputType="textPersonName"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/radioGroup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/option1ID" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="116dp"
        android:layout_height="153dp"
        android:layout_marginStart="1dp"
        app:layout_constraintBottom_toTopOf="@+id/checkBox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/option1ID3"
        app:layout_constraintTop_toBottomOf="@+id/textQuestionID">

        <RadioButton
            android:id="@+id/radioButton4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1 is answer" />

        <RadioButton
            android:id="@+id/radioButton5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2 is answer" />

        <RadioButton
            android:id="@+id/radioButton6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3 is answer" />
    </RadioGroup>

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="381dp"
        android:layout_height="42dp"
        android:text="I agree that the question is right!"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/option1ID3" />

    ////------------------- Spinner -------------------- from GFG
    <!-- Text Label -->


    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="41dp"
        android:layout_marginBottom="88dp"
        android:text="Submit question"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBox" />

</androidx.constraintlayout.widget.ConstraintLayout>